<div class="jumbotron">
  <h1>Wifi Information</h1>
  <div>
    <strong>SSID:</strong>
    SSID_HERE
  </div>
  <div>
    <strong>PASSWORD:</strong>
    PASSWORD_HERE
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>IP Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= for {name, vm} <- @vms do %>
      <tr class="jq__existing-vm">
        <td data-type="vm_name">
          <%= vm.name %>
        </td>
        <td data-type="ip_address">
          <%= display_ip(vm.ip_address) %>
        </td>
        <td data-type="running_locally">
          <%= if is_local?(vm) do %>
            <div class="jq__restore">
              <i class="fa fa-refresh" /> Restore
            </i>
          <% else %>
            -
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr class="jq__new-vm">
      <td colspan="3">
        <i class="fa fa-plus" /> Add New
      </td>
    </tr>
  </tbody>
</table>
